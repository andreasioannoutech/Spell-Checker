<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kikkos.spellchecker.ui.MainActivity">

    <EditText
        android:id="@+id/searchBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/suggestionsView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/suggestionsView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchBox"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/searchBox"
        android:layout_marginTop="111dp"
        android:visibility="gone"/>

</RelativeLayout>
