<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kikkos.spellchecker.ui.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BING SPELL CHECK"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/searchBoxAndroid"
        android:layout_alignRight="@+id/searchBoxAndroid"
        android:layout_alignEnd="@+id/searchBoxAndroid"/>

    <EditText
        android:id="@+id/searchBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"/>

    <TextView
        android:id="@+id/suggestionsView"
        android:layout_width="150dp"
        android:layout_height="?android:actionBarSize"
        android:gravity="start|center_vertical"
        android:layout_alignLeft="@+id/suggestionsViewAndroid"
        android:layout_alignStart="@+id/suggestionsViewAndroid"
        android:layout_alignTop="@+id/textView"
        android:layout_alignBottom="@+id/searchBox"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="ANDROID SPELL CHECK"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"/>

    <EditText
        android:id="@+id/searchBoxAndroid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>

    <TextView
        android:id="@+id/suggestionsViewAndroid"
        android:layout_width="150dp"
        android:layout_height="?android:actionBarSize"
        android:gravity="start|center_vertical"
        android:layout_alignBottom="@+id/searchBoxAndroid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/textView2"/>

</RelativeLayout>
